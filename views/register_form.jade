extends ./basic_layout

block styles
  link(href='/public/stylesheets/login-register-style.css', rel='stylesheet', type='text/css')

block content
  nav.navbar.navbar-fixed-top
    .container
      .navbar-header
  .container
    .login-form
      img.img-responsive.center-block(src='https://s3-ap-northeast-1.amazonaws.com/unibee/unibee_icon.png')
      h1 회원가입
      form(method='post', action='', role='main_page')
        .login-register-form-section
                form.form-horizontal(method='post', action='/auth/register')
                  .form-group
                    .input-group
                      .input-group-addon
                        i.fa.fa-user
                      input.form-control.input-lg(type='text', name='username', placeholder='Username')
                  .form-group
                    .input-group
                      .input-group-addon
                        i.fa.fa-star
                      input.form-control.input-lg(type='text', name='displayName', placeholder='Nick name')
                  .form-group
                    .input-group
                      .input-group-addon
                        i.fa.fa-lock
                      input.form-control.input-lg(type='password', name='password', placeholder='Password')
                  input.btn.btn-custom(type='submit', value='Register')
