extends ./basic_layout

block styles
  link(rel='stylesheet', href='/public/stylesheets/dashboard-normalize.css')
  link(rel='stylesheet', href='/public/stylesheets/dashboard-style.css')

block content
  #wrapper
    .overlay
    // Sidebar
    nav#sidebar-wrapper.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      ul.nav.sidebar-nav
        li.sidebar-brand
          a(href='/main')
            | UniBee
        li
          a(href='#')
            i.fa.fa-fw.fa-home
            |  Home
        li
          a(href='#')
            i.fa.fa-fw.fa-folder
            |  Page one
        li
          a(href='#')
            i.fa.fa-fw.fa-file-o
            |  Second page
        li
          a(href='#')
            i.fa.fa-fw.fa-cog
            |  Third page
        li
          a(href='#')
            i.fa.fa-fw.fa-bank
            |  Page four
        li
          a(href='#')
            i.fa.fa-fw.fa-dropbox
            |  Page 5
        li
          a(href='#')
            i.fa.fa-fw.fa-twitter
            |  Last page
    // /#sidebar-wrapper
    // Page Content

    #page-content-wrapper
      button.hamburger.is-closed.animated.fadeInLeft(type='button', data-toggle='offcanvas')
        span.hamb-top
        span.hamb-middle
        span.hamb-bottom
      .container
        .row
          .col-lg-8.col-lg-offset-2
            h1.page-header= 'Welcome, ' + displayName
            p.lead
              a(href='/auth/logout') Logout

              include chat_member

block scripts
  script(src='/public/javascript/index.js')
