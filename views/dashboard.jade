extends ./basic_layout

block styles
  link(rel='stylesheet', href='/public/stylesheets/dashboard-normalize.css')
  link(rel='stylesheet', href='/public/stylesheets/dashboard-style.css')

block content
  #wrapper
    .overlay
    // Sidebar
    nav#sidebar-wrapper.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .nav.sidebar-nav
        li.sidebar-brand
          img(src='https://s3-ap-northeast-1.amazonaws.com/unibee/unibee_logo.png')
          p
            img.img-responsive.center-block(src='https://s3-ap-northeast-1.amazonaws.com/unibee/user_default_woman.png')
            h5= 'Welcome, ' + displayName
            a(href='/auth/logout') Logout

        li
          a(href='javascript:void(0);', onclick="GotoChat(); return false;")
            span.i.fa.fa-comments-o
            |   Group Chat
        li
          a(href='javascript:void(0);', onclick="GotoWhiteboard(); return false;")
            span.i.fa.fa-fw.fa-folder
            |   Whiteboard


    // /#sidebar-wrapper
    // Page Content
    #page-content-wrapper
      button.hamburger.is-closed.animated.fadeInLeft(type='button', data-toggle='offcanvas')
        span.hamb-top
        span.hamb-middle
        span.hamb-bottom
      .container
        .row
          .col-lg-8.col-lg-offset-2
            h1 jungmin
            include chat_member


block scripts
  script(src='/public/javascript/index.js')
