doctype html
html
  head
    meta(charset='UTF-8')
    title Unibee
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/public/stylesheets/dashboard-normalize.css')
    link(rel='stylesheet prefetch', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    link(rel='stylesheet', href='/public/stylesheets/dashboard-style.css')
  body
    #wrapper
      .overlay
      // Sidebar
      nav#sidebar-wrapper.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        ul.nav.sidebar-nav
          li.sidebar-brand
            a(href='/main')
              | UniBee
          li
            a(href='#')
              i.fa.fa-fw.fa-home
              |  Home
          li
            a(href='#')
              i.fa.fa-fw.fa-folder
              |  Page one
          li
            a(href='#')
              i.fa.fa-fw.fa-file-o
              |  Second page
          li
            a(href='#')
              i.fa.fa-fw.fa-cog
              |  Third page
          li
            a(href='#')
              i.fa.fa-fw.fa-bank
              |  Page four
          li
            a(href='#')
              i.fa.fa-fw.fa-dropbox
              |  Page 5
          li
            a(href='#')
              i.fa.fa-fw.fa-twitter
              |  Last page
      // /#sidebar-wrapper
      // Page Content
      #page-content-wrapper
        button.hamburger.is-closed.animated.fadeInLeft(type='button', data-toggle='offcanvas')
          span.hamb-top
          span.hamb-middle
          span.hamb-bottom
        .container
          .row
            .col-lg-8.col-lg-offset-2
              h1.page-header Login Success!
              p.lead
                h4= 'Hello, ' + displayName
                a(href='/auth/logout') Logout


    script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
    script(src='/public/javascript/index.js')
